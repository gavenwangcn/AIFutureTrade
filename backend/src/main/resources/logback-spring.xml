<?xml version="1.0" encoding="UTF-8"?>
<configuration scan="true" scanPeriod="60 seconds" debug="false">
    <!-- 日志输出格式 -->
    <property name="LOG_PATTERN" value="%d{yyyy-MM-dd HH:mm:ss.SSS} [%thread] %-5level %logger{36} - %msg%n" />
    <!-- 日志根目录 -->
    <property name="LOG_HOME" value="logs" />
    <!-- 控制台日志 -->
    <appender name="CONSOLE" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>${LOG_PATTERN}</pattern>
            <charset>UTF-8</charset>
        </encoder>
    </appender>

    <!-- 应用日志 -->
    <appender name="FILE" class="ch.qos.logback.core.rolling.RollingFileAppender">
        <file>${LOG_HOME}/backend.log</file>
        <rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
            <!-- 每天生成一个日志文件 -->
            <fileNamePattern>${LOG_HOME}/backend.%d{yyyy-MM-dd}.log</fileNamePattern>
            <!-- 保留7天日志 -->
            <maxHistory>7</maxHistory>
        </rollingPolicy>
        <encoder>
            <pattern>${LOG_PATTERN}</pattern>
            <charset>UTF-8</charset>
        </encoder>
        <!-- 日志文件大小限制 -->
        <triggeringPolicy class="ch.qos.logback.core.rolling.SizeBasedTriggeringPolicy">
            <maxFileSize>10MB</maxFileSize>
        </triggeringPolicy>
    </appender>

    <!-- Binance API日志 -->
    <appender name="BINANCE_LOG" class="ch.qos.logback.core.rolling.RollingFileAppender">
        <file>${LOG_HOME}/binance-api.log</file>
        <rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
            <fileNamePattern>${LOG_HOME}/binance-api.%d{yyyy-MM-dd}.log</fileNamePattern>
            <maxHistory>7</maxHistory>
        </rollingPolicy>
        <encoder>
            <pattern>${LOG_PATTERN}</pattern>
            <charset>UTF-8</charset>
        </encoder>
        <triggeringPolicy class="ch.qos.logback.core.rolling.SizeBasedTriggeringPolicy">
            <maxFileSize>10MB</maxFileSize>
        </triggeringPolicy>
    </appender>

    <!-- 日志级别 -->
    <!-- 设置 additivity="false" 防止日志重复输出到root logger -->
    <logger name="com.aifuturetrade" level="info" additivity="false">
        <appender-ref ref="CONSOLE" />
        <appender-ref ref="FILE" />
    </logger>

    <!-- MyBatis Mapper日志级别设置为INFO，避免输出DEBUG级别的SQL日志 -->
    <logger name="com.aifuturetrade.dao.mapper" level="info" additivity="true" />
    <logger name="org.apache.ibatis" level="info" additivity="true" />
    <logger name="java.sql" level="info" additivity="true" />
    <logger name="java.sql.Connection" level="info" additivity="true" />
    <logger name="java.sql.Statement" level="info" additivity="true" />
    <logger name="java.sql.PreparedStatement" level="info" additivity="true" />
    <logger name="java.sql.ResultSet" level="info" additivity="true" />

    <!-- Binance API日志级别 -->
    <logger name="io.github.binance" level="info" additivity="false">
        <appender-ref ref="BINANCE_LOG" />
    </logger>

    <!-- 禁用 Spring Boot 自动配置条件评估报告日志 -->
    <logger name="org.springframework.boot.autoconfigure" level="WARN" additivity="false" />
    <logger name="org.springframework.boot.autoconfigure.condition" level="WARN" additivity="false" />

    <!-- 根日志 -->
    <root level="info">
        <appender-ref ref="CONSOLE" />
        <appender-ref ref="FILE" />
    </root>
</configuration>